shiv has given a rebus of form ?+? 

#include <bits/stdc++.h>
using namespace std;
int p = 1, n, j, a[105];
char c;
int main()
{
	a[j++] = 1;
	while (cin>>c && c != '=')
	{
		if (c == '-') p--, a[j++] = -1;
		if (c == '+') p++, a[j++] = 1;
	}
	cin>>n;
	for(int i=0;i<j;i++)
	{
		if(a[i]>0)while (p<n && a[i]<n) a[i]++, p++;
		else while (p>n&&a[i]<0 && a[i]>-n) a[i]--, p--;
	}
	if (p != n) { cout << "Impossible\n"; return 0; }
	cout << "Possible\n";
	for(int i=0;i<j;i++)
	cout << (i ? (a[i]<0 ? "- " : "+ ") : "") << abs(a[i]) << " ";
	cout << "= " << n;

}




