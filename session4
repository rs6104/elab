simon has given n numbers a1

#include <bits/stdc++.h>
using namespace std;
const int N=200000;
int n,k,x;
long long z=1,a[N+9],pr[N+9],Ans;

int main() {
	cin>>n>>k>>x;
	for (int i=1;i<=n;i++) {
	    cin>>a[i];
	    pr[i]=pr[i-1]|a[i];}
	while (k--) z*=x;
	long long sf=0;
	for (int i=n;i>=1;i--) {
		Ans=max(Ans,pr[i-1]|a[i]*z|sf);
		sf|=a[i];
	}
	cout<<Ans<<endl;
	return 0;
	
}

