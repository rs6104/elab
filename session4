	int M;cin>>M;
	map<int,int> m;
	while(M--){
		int x,y,c;cin>>x>>y>>c;
		if(m.find(y)==m.end())
		    m[y]=c;
		else if(c<m[y]) 
		    m[y]=c;
	}
	if((int)m.size()==n-1){
		long long int sum=0;
		for(auto j : m){
			sum+=j.second;
		}
		cout<<sum;
	}
	else cout<<-1;
}


